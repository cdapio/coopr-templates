{
  "name": "impala-catalog",
  "description": "Impala Catalog Server",
  "dependencies": {
    "conflicts": [],
    "install": {
      "requires": [ "base" ],
      "uses": [ "kerberos-client" ]
    },
    "provides": [],
    "runtime": {
      "requires": [
        "hadoop-hdfs-namenode",
        "hadoop-hdfs-datanode",
        "hive-metastore",
        "zookeeper-server"
      ],
      "uses": [
        "kerberos-master",
        "impala-state-store"
      ]
    }
  },
  "provisioner": {
    "actions": {
      "install": {
        "type":"chef-solo",
        "fields": {
          "run_list": "recipe[impala::catalog]"
        }
      },
      "configure": {
        "type": "chef-solo",
        "fields": {
          "run_list": "recipe[impala::config]"
        }
      },
      "start": {
        "type": "chef-solo",
        "fields": {
          "run_list": "recipe[impala::catalog],recipe[coopr_service_manager::default]",
          "json_attributes": "{\"coopr\": { \"node\": { \"services\": { \"impala-catalog\": \"start\" } } } }" 
        }
      },
      "stop": {
        "type": "chef-solo",
        "fields": {
          "run_list": "recipe[impala::catalog],recipe[coopr_service_manager::default]",
          "json_attributes": "{\"coopr\": { \"node\": { \"services\": { \"impala-catalog\": \"stop\" } } } }" 
        }
      }
    }
  }
}
